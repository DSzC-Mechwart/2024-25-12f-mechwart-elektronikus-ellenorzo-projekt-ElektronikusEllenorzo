<UserControl x:Class="IKT_II_Derecske_Holding_EE.Ablakok.Login.LoginPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IKT_II_Derecske_Holding_EE.Ablakok.Login"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Derecske Holding Elektornikus Ellenőrző" FontSize="30" TextWrapping="Wrap" MaxWidth="340" TextAlignment="Right" Margin="0 0 0 15"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <Label Content="Felhasználónév:"></Label>
                <TextBox MinWidth="200" x:Name="Felhasznalonev"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Jelszó: "></Label>
                <PasswordBox MinWidth="200" x:Name="jelszoBox"></PasswordBox>
            </StackPanel>
            <Button Content="Belépés" Margin="0 15 0 0" MaxWidth="100" Height="40" Click="Belepes"></Button>

        </StackPanel>

    </Grid>
</UserControl>
