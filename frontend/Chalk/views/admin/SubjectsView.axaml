<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:admin="clr-namespace:Chalk.viewmodels.admin"
             xmlns:viewmodels="clr-namespace:Chalk.viewmodels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chalk.views.admin.SubjectsView">
    <Grid RowDefinitions="40,*" Margin="24">
        <TextBlock VerticalAlignment="Center">Subjects</TextBlock>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding AllSubjects, DataType=admin:SubjectsViewModel}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SubjectVM">
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>