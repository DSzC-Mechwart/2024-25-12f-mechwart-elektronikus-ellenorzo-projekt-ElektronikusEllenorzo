<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Chalk.viewmodels"
             xmlns:avaUtils="clr-namespace:AvaUtils;assembly=AvaUtils"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chalk.views.MainView"
             x:DataType="vm:MainViewModel">

    <UserControl.DataContext>
        <vm:MainViewModel />
    </UserControl.DataContext>

    <avaUtils:SimpleNavControl Key="root">
        <avaUtils:SimpleNavControl.DefaultPage>
            <vm:LoginViewModel />
        </avaUtils:SimpleNavControl.DefaultPage>
    </avaUtils:SimpleNavControl>

</UserControl>